//
// MD trajectory object
//

#ifndef TRAJECTORY_QIF_INCLUDED
#define TRAJECTORY_QIF_INCLUDED

#include <modules/molstr/AnimMol.qif>
#include "TrajBlock.qif"

runtime_class Trajectory extends AnimMol
{
  client_hdr "Trajectory.hpp";
  client_name mdtools::Trajectory;

  scriptable;
  smartptr;

  property integer frame => redirect(getFrame, setFrame) (nopersist);
  default frame = 0;

  property integer dynframe => redirect(getFrame, setDynFrame) (nopersist);
  default dynframe = 0;

  property integer nframe => redirect(getFrameSize, XX) (readonly);

  property integer frame_aver_size => redirect(getFrmAverSize, setFrmAverSize);
  default frame_aver_size = 0;

  /////

  void append(object<TrajBlock$> pblk);


  /// array access method
  object<ByteArray$> getFrmArray(integer nframe, boolean bref);
};

#endif

